<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Venue #<%= @venue.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/venues" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/venues/<%= @venue.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit venue
        </a>
      </div>

      <div class="col">
        <a href="/delete_venue/<%= @venue.id %>" class="btn btn-block btn-outline-secondary">
          Delete venue
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Cuisine
      </dt>
      <dd>
        <%= @venue.cuisine %>
      </dd>

      <dt>
        Neighborhood
      </dt>
      <dd>
        <%= @venue.neighborhood %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@venue.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@venue.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "venue_templates/venue_bookmarks" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "venue_templates/venue_users" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "venue_templates/venue_dishes" %>
  </div>
</div>
